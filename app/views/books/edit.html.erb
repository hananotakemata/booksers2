<p id="notice"></p>

 <div class="container">
  <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <h3><%= @book.errors.count %>errors prohibited this ojp from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <%end%>
<%= form_with model: @book do |f| %>


  <div><label for="book_title">Title</label></div>
  <%= f.text_field :title, autofocus: true, id: "book_title", placeholder: "Enter Title" %>



  <div><label for="book_body">Opinion</label></div>
  <%= f.text_area :body, id: "book_body", placeholder: "Enter your opinion" %>


  <br>
  <%= f.submit "Update Book", class: 'btn btn-success' %>
  <div>
   <%= link_to 'Show', book_path(@book.id) %>
   <span>|</span>
   <%= link_to 'Back', books_path %>
   </div>
<% end %>

